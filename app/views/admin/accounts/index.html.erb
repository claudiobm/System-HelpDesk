<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>E-mail</th>
    <th>Departamento</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%=h account.name %></td>
    <td><%=h account.email %></td>
    <td><%=h account.account_department %></td>
    <td><%= link_to 'Visualizar', admin_account_path(account) %></td>
    <td><%= link_to 'Edit', edit_admin_account_path(account) %></td>
    <td><%= link_to 'Excluir', admin_account_path(account), :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_admin_account_path %>
