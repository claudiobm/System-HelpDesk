<h1>Listas de tipos</h1>

<table>
  <tr>
    <th>Nome</th>
  </tr>

<% @order_types.each do |order_type| %>
  <tr>
    <td><%=h order_type.name %></td>
    <td><%= link_to 'Visualizar', admin_order_type_path(order_type) %></td>
    <td><%= link_to 'Edit', edit_admin_order_type_path(order_type) %></td>
    <td><%= link_to 'Excluir', admin_order_type_path(order_type), :confirm => 'Tem certeza?', :method => :delete %> %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo tipo', new_admin_order_type_path %>
