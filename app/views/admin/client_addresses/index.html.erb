<h1>Listas endereços e clientes</h1>

<table>
  <tr>
    <th>Cliente</th>
    <th>Indentificação do endereço</th>
    <th>Endereço</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Bairro</th>
    <th>CEP</th>
    <th>Padrão</th>
  </tr>

<% @client_addresses.each do |client_address| %>
  <tr>
    <td><%=h client_address.client.name rescue "" %></td>
    <td><%=h client_address.title %></td>
    <td><%=h client_address.address %></td>
    <td><%=h client_address.city %></td>
    <td><%=h client_address.state %></td>
    <td><%=h client_address.district %></td>
    <td><%=h client_address.zipcode %></td>
    <td><%=h client_address.default %></td>
    <td><%= link_to 'Visualizar', admin_client_address_path(client_address) %></td>
    <td><%= link_to 'Edit', edit_admin_client_address_path(client_address) %></td>
    <td><%= link_to 'Excluir', admin_client_address_path(client_address), :confirm => 'Tem certeza?', :method => :delete %> %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New client_address', new_admin_client_address_path %>
