<h1>Listing equipment</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Delivery date</th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%=h equipment.name %></td>
    <td><%=h equipment.description %></td>
    <td><%=h equipment.amount %></td>
    <td><%=h equipment.delivery_date %></td>
    <td><%= link_to 'Visualizar', admin_equipment_path(equipment) %></td>
    <td><%= link_to 'Edit', edit_admin_equipment_path(equipment) %></td>
    <td><%= link_to 'Excluir', admin_equipment_path(equipment), :confirm => 'Tem certeza?', :method => :delete %> %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New equipment', new_admin_equipment_path %>