<h1>Editing equipment</h1>

<% form_for([:admin, @equipment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :delivery_date %><br />
    <%= f.datetime_select :delivery_date %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Visualizar', admin_equipment_path(@equipment) %> |
<%= link_to 'Voltar', admin_equipment_path %>