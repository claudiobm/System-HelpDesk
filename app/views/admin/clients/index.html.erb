<h1>Listas de clientes</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Telefone 1</th>
    <th>Telefone 2</th>
    <th>Contato</th>
    <th>Vinculado com</th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%=h client.name %></td>
    <td><%=h client.tel1 %></td>
    <td><%=h client.tel2 %></td>
    <td><%=h client.contact %></td>
    <td><%=h client.children.name rescue "" %></td>
    <td><%= link_to 'Visualizar', admin_client_path(client) %></td>
    <td><%= link_to 'Edit', edit_admin_client_path(client) %></td>
    <td><%= link_to 'Excluir', admin_client_path(client), :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo cliente', new_admin_client_path %>
