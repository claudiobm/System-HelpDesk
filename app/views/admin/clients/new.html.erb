<h1>New client</h1>

<% form_for([:admin, @client]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :tel1 %><br />
    <%= f.text_field :tel1 %>
  </p>
  <p>
    <%= f.label :tel2 %><br />
    <%= f.text_field :tel2 %>
  </p>
  <p>
    <%= f.label :contact %><br />
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.text_field :parent_id %>
  </p>
  <p>
    <%= f.label :observation %><br />
    <%= f.text_area :observation %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Voltar', admin_clients_path %>