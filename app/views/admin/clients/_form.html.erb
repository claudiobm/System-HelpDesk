<% end %>

<%= f.error_messages %>

<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :tel1 %><br />
  <%= f.text_field :tel1 %>
</p>

<p>
  <%= f.label :tel2 %><br />
  <%= f.text_field :tel2 %>
</p>

<p>
  <%= f.label :contact %><br />
  <%= f.text_field :contact %>
</p>

<p>
  <%= f.label :parent_id %><br />
	<%= f.collection_select(:parent_id, Client.all, :id, :name, :prompt => true) %>
</p>

