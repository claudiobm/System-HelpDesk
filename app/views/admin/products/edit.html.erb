<h1>Editing product</h1>

<% form_for([:admin, @product]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :cod %><br />
    <%= f.text_field :cod %>
  </p>
  <p>
    <%= f.label :cod_universal %><br />
    <%= f.text_field :cod_universal %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :product_category %><br />
    <%= f.text_field :product_category %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Visualizar', admin_product_path(@product) %> |
<%= link_to 'Voltar', admin_products_path %>