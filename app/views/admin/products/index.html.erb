<h1>Listas de produtos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Código</th>
    <th>Código universal</th>
    <th>Descrição</th>
    <th>Categoria</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.cod %></td>
    <td><%=h product.cod_universal %></td>
    <td><%=h product.description %></td>
    <td><%=h product.product_category.name rescue "" %></td>
    <td><%= link_to 'Visualizar', admin_product_path(product) %></td>
    <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
    <td><%= link_to 'Excluir', admin_product_path(product), :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo produto', new_admin_product_path %>
