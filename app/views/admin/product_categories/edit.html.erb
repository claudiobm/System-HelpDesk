<h1>Editing product_category</h1>

<% form_for([:admin, @product_category]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Visualizar', admin_product_category_path(@product_category) %> |
<%= link_to 'Voltar', admin_product_categories_path %>