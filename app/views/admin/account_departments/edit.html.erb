<h1>Editing account_department</h1>

<% form_for([:admin, @account_department]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Visualizar', admin_account_department_path(@account_department) %> |
<%= link_to 'Voltar', admin_account_departments_path %>